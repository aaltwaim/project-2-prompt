
<h1>Collectibles</h1>
<h3>Go to show for the auction </h3>
<%= link_to 'New Collectible', new_collectible_path %> | 
<%= link_to 'Collectibles', collectibles_path %> | 
<%= link_to 'Auctions', auctions_path %>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mintage</th>
      <th>Current bid</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collectibles.each do |collectible| %>
      <tr>
        <td><%= collectible.name %></td>
        <td><%= collectible.mintage %></td>
        <td><%= collectible.current_bid %></td>
        
        <td><%= image_tag(collectible.img, size: "200x200", alt: "Collectible Image") %></td>
        
        <td><%= link_to 'Show', collectible %></td>
        <td><%= link_to 'Edit', edit_collectible_path(collectible) %></td>
        <td><%= link_to 'Destroy', collectible, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>