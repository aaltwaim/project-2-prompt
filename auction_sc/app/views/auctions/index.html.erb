<p id="notice"><%= notice %></p>

<h1>Auctions</h1>

<table>
  <thead>
    <tr>
      <th>Collectible</th>
      <th>Number of bidding</th>
      <th>Previous bidding</th>
      <th>Current bidding</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= auction.collectible_id %></td>
        <td><%= auction.number_of_bidding %></td>
        <td><%= auction.previous_bidding %></td>
        <td><%= auction.current_bidding %></td>
        <td><%= link_to 'Show', auction %></td>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

